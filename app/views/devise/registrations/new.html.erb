<!-- Sign up -->
<div class="row">
  <div class="col-6">
    <div class="squarebg">
    </div>
  </div>
  <div class="col-6 py-5">
    <%= image_tag "WoletHub.svg", class: "logo mx-5", alt: "Logo" %>
        <div class="col-6 py-5 mx-5">
          <h3>Â¡Hola!</h3>
          <p>Crea tu cuenta para ordenar conectarte con WoletHub.</p>
        </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="col-10 form-inputs pt-3 mx-5">
        <%= f.input :name,
                    required: true%>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} caraceteres minimos" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
        <%#= f.input :bank_accounts, as: :select, collection: BankAccount.all, label_method: :name, value_method: :id,
                    required: true %>
        <%= f.input :preferred_currency, as: :select, collection:  ["CLP", "BTC"],
                    required: true %>
      </div>

      <div class="form-actions py-5 mx-5">
          <div class="row">
            <div class="col-6 mt-2">
              <%= render "devise/shared/links" %>
            </div>
            <div class="col-6 text-end">
              <%= f.button :submit, "Sign up", class:"btn btn-primary btn-signup" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
