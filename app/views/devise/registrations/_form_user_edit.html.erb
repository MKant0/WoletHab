<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs col-12 pt-3 mx-5">
            <div class="baige-rounded-box px-3">
              <%= f.input :email, required: true, autofocus: true %>
            </div>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>
            <div class="baige-rounded-box px-3">
              <%= f.input :password,
                          hint: "No pongas nada si no quieres cambiarla",
                          required: false,
                          input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="baige-rounded-box px-3">
              <%= f.input :password_confirmation,
                          required: false,
                          input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="baige-rounded-box px-3">
              <%= f.input :current_password,
                          hint: "Necesitamos tu clave actual para poder hacer los cambis",
                          required: true,
                          input_html: { autocomplete: "current-password" } %>
            </div>
          </div>
          <div class="row pt-3 mx-5">
            <div class="col-6">
              <%= f.button :submit, "Actualizar", class: "btn btn-outline-primary purple-btn"  %>
            </div>
            <div class="col-6 text-end">
              <%= button_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro que queires eliminar tu cuenta?", turbo_confirm: "Estas seguro que queires eliminar tu cuenta?" }, method: :delete, class: "btn btn-danger red-btn" %>
            </div>
          </div>

<% end %>
